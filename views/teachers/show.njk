{% extends 'layout.njk' %}

{% block content %}

    <div class="card">
        <section class="avatar" style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover"></section>
        <section class="details">
            <h3>Professor(a)</h3>

            <div class="information">
                <div>Nome completo</div>
                <div>{{ teacher.name }}</div>
            </div>
            <div class="information">
                <div>Idade</div>
                <div>{{ teacher.birth }}</div>
            </div>
            <div class="information">
                <div>Grau de escolaridade</div>
                <div>{{ teacher.degree }}</div>
            </div>
            <div class="information">
                <div>Tipo de aula</div>
                <div>{{ teacher.modality }}</div>
            </div>
            <div class="information">
                <div>Acompanhamento</div>
                <div class="item">
                    {% for lesson in teacher.lessons %}
                        <span>{{ lesson }}</span>
                    {% endfor %}
                </div>
            </div>
            <div class="information">
                <div>Desde</div>
                <div>{{ teacher.created_at }}</div>
            </div>
        </section>
    </div>

{% endblock content %}s